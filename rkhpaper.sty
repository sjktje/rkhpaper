% Now redefine \maketitle so that it builds our cover page the way
% we want it to, including RKH logo et.c.
\let\@rkh@maketitle=\maketitle
\def\maketitle{%
  \newgeometry{top=0mm,hoffset=-0.5in,voffset=-0.5in}
  \let\footnotesize\small
  \let\footnoterule\relax
%  \let \footnote \thanks

  % We want no page number on title page.
  \thispagestyle{empty}
  \setcounter{page}{0}

  \begin{flushleft}
  \rkhlogo \\ %Print out logo.
  \ifdefined\@rkh@subject
    \@rkh@subject\\
  \fi
  \ifdefined\@rkh@points
    \@rkh@points hp
    \ifdefined\@rkh@level
        \@rkh@level\\
    \fi
  \fi
  \ifdefined\@rkh@course
    \@rkh@course, \number\year\\
  \fi
  \end{flushleft}

  \vspace{3cm}
  \begin{center}%
    {\Large \@title \par}%
  \end{center}\par

  \begin{leftcorner}
    \begin{tabular}{ll}
    \ifdefined\@author
        Författare: & \@author\\
    \fi
    \ifdefined\@rkh@tutor
        Handledare: & \@rkh@tutor\\
    \fi
    \ifdefined\@rkh@examinator
        Examinator: & \@rkh@examinator\\
    \fi
    \end{tabular}
  \end{leftcorner}

  \@thanks
  \vfil\null
  \global\let\thanks\relax
  \global\let\maketitle\relax
  \global\let\@thanks\@empty
  \global\let\@author\@empty
  \global\let\@date\@empty
  \global\let\@title\@empty
  \global\let\title\relax
  \global\let\author\relax
  \global\let\date\relax
  \global\let\and\relax
  \@rkh@maketitle

  \restoregeometry
}

\setcounter{page}{1}%
